// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "language_models": {
    "openai": {
      "api_url": "http://localhost:11434/v1"
    }
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    // See https://github.com/eclipse-jdtls/eclipse.jdt.ls/wiki/Running-the-JAVA-LS-server-from-the-command-line#initialize-request
    "jdtls": {
      "initialization_options": {
        "settings": {
          "java": {
            "errors": {
              "incompleteClasspath": {
                "severity": "warning"
              }
            },
            "configuration": {
              "updateBuildConfiguration": "interactive"
            },
            "trace": {
              "server": "verbose"
            },
            "import": {
              "maven": {
                "enabled": true
              }
            },
            "jdt": {
              "ls": {
                "lombokSupport": {
                  "enabled": true // Set this to true to enable lombok support
                }
              }
            },
            "maven": {
              "downloadSources": true
            },
            "referencesCodeLens": {
              "enabled": true
            },
            "signatureHelp": {
              "enabled": true
            },
            "implementationsCodeLens": {
              "enabled": true
            },
            "format": {
              "enabled": false
            },
            "saveActions": {
              "organizeImports": false
            }
          }
        }
      }
    }
  },
  "notification_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "chat_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "vim_mode": false,
  "theme": "Ayu Mirage",
  "base_keymap": "JetBrains",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "languages": {
    "Terraform": {
      "formatter": {
        "external": {
          "command": "terraform",
          "arguments": ["fmt", "-"]
        }
      }
    },
    "JSON": {},
    "JavaScript": {},
    "TypeScript": {},
    "TSX": {}
  },
  "agent": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4-turbo-preview"
    }
  },
  "auto_install_extensions": {
    "biome": true,
    "dockerfile": true,
    "git-firefly": true,
    "groovy": true,
    "html": true,
    "java": true,
    "make": true,
    "scss": true,
    "templ": true,
    "terraform": true,
    "toml": true,
    "xml": true
  }
}
